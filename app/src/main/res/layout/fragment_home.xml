<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/container"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/black"
	android:orientation="vertical"
	tools:context="com.elmz.shelfthing.fragment.HomeFragment">

	<android.support.v7.widget.CardView
		android:id="@+id/header_card"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:clickable="true"
		android:foreground="?attr/selectableItemBackgroundBorderless"
		android:layout_margin="16dp"
		android:layout_weight="1">

		<TextView
			android:id="@+id/header"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="@string/app_name"
			android:textSize="24sp"
			android:padding="8dp"/>
	</android.support.v7.widget.CardView>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<android.support.v7.widget.CardView
			android:id="@+id/left_card"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_marginEnd="8dp"
			android:layout_marginStart="16dp"
			android:layout_marginBottom="16dp"
			android:layout_weight="1"
			android:backgroundTint="@color/amber_100"
			android:foreground="?attr/selectableItemBackgroundBorderless"
			android:clickable="true">

			<ImageView
				android:layout_width="144dp"
				android:layout_height="144dp"
				android:contentDescription="@string/title_settings"
				android:layout_marginVertical="24dp"
				android:src="@drawable/qr_code"
				android:layout_gravity="center"
				android:tint="@color/amber_700"/>
		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			android:id="@+id/right_card"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="16dp"
			android:layout_marginBottom="16dp"
			android:layout_weight="1"
			android:backgroundTint="@color/blue_grey_100"
			android:foreground="?attr/selectableItemBackgroundBorderless"
			android:clickable="true">

			<ImageView
				android:layout_width="144dp"
				android:layout_height="144dp"
				android:contentDescription="@string/title_settings"
				android:layout_marginVertical="24dp"
				android:src="@drawable/ic_settings_black_24dp"
				android:layout_gravity="center"
				android:tint="@color/blue_grey_700"/>
		</android.support.v7.widget.CardView>
	</LinearLayout>

</LinearLayout>
